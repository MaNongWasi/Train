<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/action_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/img_info"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@id/action_title"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/detail_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/img_info"
        android:layout_marginTop="10dp"
        android:textSize="30sp" />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_tv"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/before_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="40sp"
            />

        <!--<ImageView-->
        <!--android:layout_width="30dp"-->
        <!--android:layout_height="30dp"-->
        <!--android:src="@drawable/before"-->
        <!--android:background="@android:color/transparent"-->
        <!--android:layout_weight="1"-->
        <!--android:onClick="before"-->
        <!--/>-->

        <EditText
            android:id="@+id/data_et"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_normal"
            android:layout_weight="2"
            android:textSize="30sp"
            android:gravity="center"
            android:hint="10"
            />

        <!--<ImageView-->
        <!--android:layout_width="30dp"-->
        <!--android:layout_height="30dp"-->
        <!--android:layout_weight="1"-->
        <!--android:src="@drawable/next"-->
        <!--android:background="@android:color/transparent"-->
        <!--android:onClick="next"-->
        <!--/>-->
        <TextView
            android:id="@+id/next_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="   >>"
            android:textSize="40sp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/proces_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/layout"
        android:layout_marginTop="10dp"
        android:textSize="25sp" />


</RelativeLayout>

